set -eu
cmake -B build -GNinja -DCMAKE_INSTALL_PREFIX=install -DCMAKE_CXX_COMPILER=clang++-20 -DCMAKE_BUILD_TYPE=Debug -DCMAKE_PREFIX_PATH=/opt/ros/jazzy/ -DRELEASE_OPTIMIZE=-O2 -DBUILD_DEVS=ON
cmake --build build/
cmake --build build/ --target host_code_examples
